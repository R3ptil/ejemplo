<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-9">
    <% if @tweets.any? %>
      
    <% @tweets.each do |tweet| %>
        <div class="well">
          <h2> <%= tweet.title %> </h2>
          <%= tweet.content %>
          <%= link_to 'Edit', edit_tweet_path(tweet), class:'btn btn-primary' %>
          <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-warning' %>
        </div> 
      <% end %>
    <% else %>
      <h1> no hay tweets con ese contenido <%=params[:query] %> </h1>
    <% end %>
    </div>
    
  
  <div class="col-md-3">
    
    <%= render 'form', tweet: @new_tweet %>
  </div>  
</div>
